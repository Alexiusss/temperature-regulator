<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.layout.HBox?>
<HBox alignment="TOP_CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.client.controller.TemperatureController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Spinner fx:id="doubleSpinner" editable="true" maxWidth="80"/>
    <Button text="Set" onAction="#onPostButtonClick"/>
    <ListView fx:id="listView" maxWidth="150"/>
    <Button text="Get data" onAction="#onGetButtonClick"/>
</HBox>